<h2><%= @task.title %></h2>

<p><%= @task.completed? ? "Finished" : "Todo" %></p>

<p><%= @task.details %></p>

<p><%= link_to "Edit Task", edit_path %></p>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<p><%= link_to "Back to Task", tasks_path %></p>
